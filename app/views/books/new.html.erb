<!-- Adding New Book -->
<div class="center flex-column">
  <h1>Add New Book</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="text-danger"><%= error %></p>
    <% end %>
  <% end %>

  <%# Form Started Here %>
  <%= form_for @book do |f| %>
    <%= f.label :name, class:"mt-3"  %>
    <%= f.text_field :name ,placeholder: "Enter Book's Name", class:"mb-2 form-control" %>
    <br>

    <%= f.label :price%>
    <%= f.number_field :price, step: :any ,placeholder: "Enter Book's Price", class:"mb-2 form-control" %>
    <br>

    <%= f.label :author%>
    <%= f.select :author_id, Author.all.map { |t| [t.firstname+ " " +t.lastname, t.id]}%>
    <br> <br>

    <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
    
  <% end %>
</div>
