<div class="center flex-column" id="vantajs" style="height:100vh;">
  <div class="card" style="width: 24rem;">
    <div class="card-header">
      <h2 class="text-center">Sign Up</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @user, url: sign_up_path do |f| %>
        <%= f.label "email", class: "mt-3" %><br>
        <%= f.text_field :email, placeholder: "Enter Your Email", class: "mb-3 form-control" %>
        <%= f.label "username", class: "mt-3" %><br>
        <%= f.text_field :username, placeholder: "Enter Your Username", class: "mb-3 form-control" %>
        <%= f.label "password", class: "mt-3" %><br>
        <%= f.password_field :password, placeholder: "Enter Your Password", class: "mb-3 form-control" %>
        <%= f.label "password_confirmation", class: "mt-3" %><br>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Your Password", class: "mb-3 form-control" %>
        <!-- Nested Form for address -->
        <%= f.fields_for :address do |address| %>
          <%= address.label "Address", class: "mt-3" %>
          <%= address.text_area :user_address, placeholder: "Enter Your Address", class: "mb-3 form-control" %>
        <% end %>
        <%= f.submit "Sign Up", class: "btn-primary border-0 rounded-pill shadow py-2 px-3 mt-2" %>
      <% end %>
    </div>
  </div>
</div>
