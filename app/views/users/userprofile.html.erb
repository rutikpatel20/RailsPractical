<!-- Event Details Showing -->
<% if @current_user %>
  <div class="center flex-column" id="vantajs" style="height:100vh;">
    <!--Error Message-->
    <% if flash[:errors] %>
      <% flash.each do |name, message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    <% end %>
    <div class="d-flex">
      <div class="m-5" style="width:50%;">
        <div class="card border-warning shadow" >
          <div class="card-body">
            <div class="card-header">
              <h2 class="text-center">User's Details</h2>
            </div>
            <h2> &#10145; User ID: <%= @current_user.id %> </h2>
            <h2> &#10145; Username: <%= @current_user.username %> </h2>
            <h2> &#10145; Email ID: <%= @current_user.email %> </h2>
            <h2> &#10145; Address: <%= @current_user.address.user_address %> </h2>
          </div>
        </div>
      </div>
      <div>
        <h2 class="mt-5 text-light">Enrolled Events </h2>
        <table class="table table-info table-striped">
          <thead class="table-secondary">
            <td class="text-center">Event Name</td>
            <td class="text-center">Description</td>
            <td class="text-center">Event Date</td>
          </thead>
          <% @current_user.enrollments.each do |enroll| %>
            <tr>
              <td class="text-center"> <%= enroll.event.name %> </td>
              <td class="text-center"> <%= enroll.event.description %> </td>
              <td class="text-center"> <%= enroll.event.event_date %> </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>
