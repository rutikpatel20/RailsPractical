<div class="center flex-column" id="vantajsnet" style="height:100vh;">
  <h1 class="text-light"> Employees </h1>
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <!-- Search bar for Searching Employees -->
  <div class="mb-3">
    <%= form_with url: "/search", :method => "get" do %>
      <div class="d-flex">
        <%= text_field_tag :searchParams, params[:searchParams], placeholder: "Search Employee", class: "form-control me-2" %>
        <%= submit_tag "Search", class: "btn btn-success me-2" %>
      </div>
    <% end %>
  </div>
  <!-- Employee Table -->
  <div>
    <table class="table table-info table-striped">
      <ol class="fs-2">
        <thead class="table-secondary">
          <td class="text-center"> Id </td>
          <td class="text-center"> Name </td>
          <td class="text-center"> Email </td>
          <td class="text-center"> Hobbies </td>
          <td class="text-center"> Contact </td>
          <td class="text-center"> Birthdate </td>
          <td colspan=3 class="text-center"> Action </td>
        </thead>
        <% @employee1s.each do |e| %>
          <tr>
            <td class="text-center"> <%= e.id %> </td>
            <td class="text-center"> <%= link_to e.employee_name, employee1_path(e) %> </td>
            <td class="text-center"> <%= e.email %> </td>
            <td class="text-center"> <%= e.hobbies %> </td>
            <td class="text-center"> <%= e.mobile_number %> </td>
            <td class="text-center"> <%= e.birth_date %> </td>
            <td class="text-center"><%= button_to "Show",employee1_path(e),method: :get, class:"btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Edit",edit_employee1_path(e),method: :get, class:"btn-primary border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Delete",employee1_path(e),method: :delete, class:"btn-danger border-0 rounded-pill shadow px-3 py-2" %></td>
          </tr>
        <% end %>
      </ol>
    </table>
  </div>
  <div class="d-flex">
    <%= button_to fa_icon("plus", text: "Add New Employee"), new_employee1_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
  </div>
</div>
