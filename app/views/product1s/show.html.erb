<!-- Product Details Showing -->
<div class="center flex-column" id="vantajsnet" style="height:100vh;">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Product Details</h2>
          </div>
          <div>
            <h2> &#10145; ID: <%= @product1.id %> </h2>
            <h2> &#10145; Name: <%= @product1.name %> </h2>
            <h2> &#10145; Price: <%= @product1.price %> </h2>
          </div>
          <div class="d-flex">
            <% if current_user1.role == "admin" %>
              <%= button_to "Edit product" , edit_product1_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
              <%= button_to "Delete product", product1s_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <% end %>
            <%= button_to "View all Products", product1s_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
    <!-- Order Table Showing Here -->
    <% if @product1.order1s.any? %>
      <div class="m-5">
        <div class="card bg-light border-warning shadow">
          <div class="card-body">
            <div class="card-header">
              <h2 class="text-center">Order Details</h2>
            </div>
            <table class="table table-info table-striped">
              <ol class="fs-2">
                <thead class="table-secondary">
                  <td class="text-center"> Product ID </td>
                  <td class="text-center"> Order ID </td>
                  <td class="text-center"> Order Quantity </td>
                  <% if current_user1.role == "admin" %>
                    <td colspan="2" class="text-center"> Action </td>
                  <% end %>
                </thead>
                <% @order1s_of_product1.each do |order1| %>
                  <tr>
                    <td class="text-center"> <%= @product1.id %> </td>
                    <td class="text-center"> <%= order1.id %> </td>
                    <td class="text-center"> <%= order1.quantity %> </td>
                    <% if current_user1.role == "admin" %>
                      <td class="text-center"><%= button_to "Edit", edit_product1_order1_path(@product1, order1), method: :get ,class:"btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
                      <td class="text-center"><%= button_to "Delete", product1_order1_path(@product1, order1), method: :delete ,class:"btn-danger border-0 rounded-pill shadow px-3 py-2" %></td>
                    <% end %>
                  </tr>
                <% end %>
              </ol>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
