<%= render 'layouts/navbar' %>
<!-- File For Edit Student -->
<div class="center flex-column">

<!-- Error Message -->
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="text-danger"><%= error %></p>
    <% end %>
  <% end %>

  <!-- Edit Form Start Here -->
  <h1> Edit Order's Detail </h1>
  <%= form_for @order, url: {action: :update} do |f| %>
    <%= f.label :customer_id, "Customer Name :", class:"mt-3" %>
    <%= f.select :customer_id, Customer.all.map { |t| [t.fname+ "" +t.lname,t.id] } ,class:"mb-2 form-control" %>
    <br>

    <%= f.label :myproduct_id, "Product Name :", class:"mt-3" %>
    <%= f.select :myproduct_id, Myproduct.all.map { |t| [t.title,t.id] } ,class:"mb-2 form-control" %>
    <br>

    <%= f.label :quantity, "Quantity :", class:"mt-3" %>
    <%= f.number_field :quantity ,placeholder: "Enter Order's Quantity",class:"mb-2 form-control" %>
    <br>

    <%= f.label :status, "Status :" %>
    <%= f.select(:status, Order.statuses.keys) %>
    <br>
    
    <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
    
  <% end %>
</div>
