<div class="center flex-column" id="vantajs" style="height:100vh;">
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      <h2 class="text-center">Sign In</h2>
    </div>
    <div class="card-body">
      <%= form_with url: sign_in_path do |f| %>
        <%= f.label "email", class: "mt-3" %><br>
        <%= f.text_field :email, id: "email", placeholder: "Enter Your Email", class: "mb-3 form-control" %>
        <%= f.label "password", class: "mt-3" %><br>
        <%= f.password_field :password, id: "password", placeholder: "Enter Your Password", class: "mb-3 form-control" %>
        <%= f.submit "Log In", class: "btn-primary border-0 rounded-pill shadow py-2 px-4 mt-2" %>
      <% end %>
    </div>
  </div>
</div>
