<%= render 'layouts/navbar' %>
<div class="center flex-column" style = "height: auto;">

  <h1> Customers </h1>

  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>

  <!-- Customer Table -->
  <div>
    <table class="table table-info table-striped">
      <ol class="fs-2">
        <thead class="table-secondary">
          <td class="text-center"> Name </td>
          <td class="text-center"> Email </td>
          <td class="text-center"> Phone  </td>
          <td colspan=3 class="text-center"> Action </td>
        </thead>

        <% @customers.each do |customer| %>
          <tr>
            <td class="text-center"> <%= link_to customer.fname + " " + customer.lname, customer_path(customer) %> </td>
            <td class="text-center"> <%= customer.email %> </td>
            <td class="text-center"> <%= customer.phone_number %> </td>
            
            <td class="text-center"><%= button_to "Show",customer_path(customer),method: :get, class:"btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Edit",edit_customer_path(customer),method: :get, class:"btn-primary border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Delete",customer_path(customer),method: :delete, class:"btn-danger border-0 rounded-pill shadow px-3 py-2" %></td>
          </tr>
        <% end %>
      </ol>
    </table>
  </div>

  <div class="d-flex">
    <%= button_to fa_icon("plus", text: "Add New Customer"), new_customer_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
    <%= button_to fa_icon("cube", text: "Product Page"), myproducts_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
    <%= button_to fa_icon("shopping-cart", text: "Order Page"), orders_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
  </div>

</div>
