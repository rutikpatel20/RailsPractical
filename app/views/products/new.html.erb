<!-- File For Add New Product -->
<div class="center flex-column">

    <h1> Add New Products </h1>

    <!-- TO Display Error/Success Message -->
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="text-danger"><%= error %></p>
        <% end %>
    <% end %>

    <%# New Product Form Started Here %>
    <%= form_for @product do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name ,placeholder: "Enter Product's Name",class:"mb-2 form-control" %>
        <br>

        <%= f.label :price %>
        <%= f.number_field :price, step: :any ,placeholder: "Enter Product's Price",class:"mb-2 form-control" %>
        <br>

        <%= f.label :description %>
        <%= f.text_field :description ,placeholder: "Enter Product's Description",class:"mb-2 form-control" %>
        <br>

        <%=f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>

    <% end %>

</div>