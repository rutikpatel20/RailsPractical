<div class="mt-3 d-flex">Edit comments:
  <%= form_with(url: update_comment_event_path, method: :patch) do |form| %>
    <%= form.text_field :user_comment, class: "form-control mb-3" %>
    <%= form.hidden_field :event_id, value: @event.id %>
    <%= form.submit "Update Comment", class: "btn-success border-0 rounded-pill shadow p-2 mt-1" %>
  <% end %>
</div>
