<!-- Product Details Showing -->
<div class="center flex-column" id="vantajs" style="height:100vh;">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Product Details</h2>
          </div>
          <div>
            <h2> &#10145; ID: <%= @product2.id %> </h2>
            <h2> &#10145; Name: <%= @product2.product_name %> </h2>
            <h2> &#10145; Price: <%= @product2.price %> </h2>
            <h2> &#10145; Price: <%= @product2.description %> </h2>
          </div>
          <div class="d-flex">
            <% if current_user1.role == "admin" %>
              <%= button_to "Edit product" , edit_product2_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
              <%= button_to "Delete product", product2s_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <% end %>
            <%= button_to "View all Products", product2s_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
