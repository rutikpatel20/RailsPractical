<!-- This filed is connected with layouts/update_mail.html.erb -->
<h3> A <%= @user2.class.to_s %> has been Updated. </h3>
<!-- User Details Showing -->
<div>
  <div class="d-flex">
    <div class="mx-5" >
      <div class="showcard">
        <div class="card text-dark bg-light" style="width: 20rem; border-radius: 2em;">
          <div class="card-header text-center mb-3">
            Updated User
          </div>
          <%= image_tag attachments['filename.jpg'].url,alt: "Image not available", class:"card-img img-resposive", style:"width: 65%; border-radius: 15%;margin: 0 auto; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);" %>
          <div class="card-body">
            <h5 class="card-title text-center", style="font-weight: 700;font-size: 1.5em;"><%= @user2.name %></h5>
            <p class="card-text text-center"><%= @user2.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<p class="mt-5">Details of the object created is : </p>
<table class="table table-info table-striped", style="width: 22rem;">
  <thead class="table-secondary">
    <td colspan="2" class="text-center"> Detail's Table </td>
  </thead>
  <!-- loop for printing the details of the created object -->
  <% @user2.attributes.each do |attr_key, attr_value| %>
    <tr>
      <td class="text-center"> <%= attr_key %> </td>
      <td class="text-center">  <%= attr_value %></td>
    </tr>
  <% end %>
</table>
<h4>Mail ended here THANKS!!!</h4>
