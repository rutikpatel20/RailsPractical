<%= render 'layouts/navbar'%>
<!-- File For Edit Student -->
<div class="center flex-column">

<!-- Error Message -->
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="text-danger"><%= error %></p>
    <% end %>
  <% end %>

  <!-- Edit Form Start Here -->
  <h1> Edit Employee's Detail </h1>
  <%= form_for @employee, url: {action: :update} do |f| %>
    <%= f.label :firstname, "First Name :", class:"mt-3" %>
    <%= f.text_field :firstname ,placeholder: "Enter Employee's First Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :lastname, "Last Name :" %>
    <%= f.text_field :lastname ,placeholder: "Enter Employee's Last Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :email, "E-mail ID :" %>
    <%= f.text_field :email ,placeholder: "Enter Employee's E-mail ID",class:"mb-2 form-control" %>
    <br>

    <%= f.label :age, "Age :" %>
    <%= f.number_field :age ,placeholder: "Enter Employee's Age",class:"mb-2 form-control" %>
    <br>

    <%= f.label :no_of_order, "No. of Order :" %>
    <%= f.number_field :no_of_order, placeholder: "Enter Employee's No Of Order",class:"mb-2 form-control" %>
    <br>

    <%= f.label :full_time_available, "Is Employee available full time?" %> &nbsp;
    <%= f.check_box :full_time_available,class:"form-check-input" %>
    <br> <br>

    <%= f.label :salary, "Salary :" %>
    <%= f.number_field :salary ,placeholder: "Enter Employee's Salary",class:"mb-2 form-control" %>
    <br>

    <%=f.submit class:"btn-warning border-0 rounded-pill shadow p-3" %>
    
  <% end %>
</div>
