<!-- File For Edit Student -->
<%= render 'layouts/navbar' %>
<div class="center flex-column">

<!-- Error Message -->
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="text-danger"><%= error %></p>
    <% end %>
  <% end %>

  <!-- Edit Form Start Here -->
  <h1> Edit Product's Detail </h1>
  <%= form_for @myproduct, url: {action: :update} do |f| %>
    <%= f.label :title, "Title :", class:"mt-3" %>
    <%= f.text_field :title ,placeholder: "Enter Product's Title",class:"mb-2 form-control" %>
    <br>

    <%= f.label :description, "Description :" %>
    <%= f.text_field :description ,placeholder: "Enter Product's Description",class:"mb-2 form-control" %>
    <br>

    <%= f.label :price, "Price :" %>
    <%= f.number_field :price ,placeholder: "Enter Product's Price",class:"mb-2 form-control" %>
    <br>

    <%= f.label :capacity, "Capacity :" %>
    <%= f.number_field :capacity ,placeholder: "Enter Product's Capacity",class:"mb-2 form-control" %>
    <br>

    <%= f.label :is_active, "Is Product active?" %> &nbsp;
    <%= f.check_box :is_active,class:"form-check-input" %>
    <br> <br>

    <%= f.label :status, "Status :" %>
    <%= f.select(:status, Myproduct.statuses.keys) %>
    <br>
    
    <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
    
  <% end %>
</div>