<!-- For for New or Edit -->
<div class="center flex-column border-warning shadow" id="vantajs" style="height:100vh;">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="text-danger"><%= error %></p>
    <% end %>
  <% end %>
  <% # Form Started Here %>
  <div class="card bg-light border-warning shadow" style="width: 22rem;">
    <div class="card-body">
      <div class="card-header">
        <h2 class="text-center">Category Form</h2>
      </div>
      <p class="card-text">Different Categories like Art, Music, Food, Dance, Visual etc</p>
      <% if @current_user %>
        <%= form_for @category do |category| %>
          <%= category.label :category_name, "Category Name :", class: "mt-3" %>
          <%= category.text_field :category_name, placeholder: "Enter Event's Name", class: "mb-2 form-control" %>
          <br>
          <div>
            <%= category.number_field :user_id, value: @current_user.id, type: :hidden %>
          </div>
          <%= category.submit class: "btn-primary border-0 rounded-pill shadow p-3" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
