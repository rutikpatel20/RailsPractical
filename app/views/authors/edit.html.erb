<%= render 'layouts/navbar'%>
<!-- File For Edit Author -->
<div class="center flex-column">

  <h1> Edit Author's Detail </h1>

  <!-- Edit Form Start Here -->
  <%= form_for @author, url: {action: :update} do |f| %>

    <%= f.label :firstname, "First Name :", class:"mt-3"  %>
    <%= f.text_field :firstname ,placeholder: "Enter Author's First Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :lastname, "Last Name :" %>
    <%= f.text_field :lastname ,placeholder: "Enter Author's Last Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :DOB, "Birthdate :" %> &nbsp;
    <%= f.date_select :dob, as: :date, :start_year=>1900 ,placeholder: "Enter Author's Birthday Date",class:"mb-2 rounded-3" %>
    <br> <br>

    <%= f.label :email, "Email :" %>
    <%= f.text_field :email ,placeholder: "Enter Author's Email",class:"mb-2 form-control" %>
    <br>
    
    <%=f.submit class:"btn-warning border-0 rounded-pill shadow p-3" %>
    
  <% end %>
</div>
