<%= render 'layouts/navbar'%>
<!-- Add New Author -->
<div class="center flex-column">
<h1>Add New Author</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p class="text-danger"><%= error %></p>
    <% end %>
<% end %>

<%# Form Started Here %>
<%= form_for @author do |f| %>
  
    <%= f.label :firstname, "First Name :", class:"mt-3" %>
    <%= f.text_field :firstname ,placeholder: "Enter Author's First Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :lastname, "Last Name :" %>
    <%= f.text_field :lastname ,placeholder: "Enter Author's Last Name",class:"mb-2 form-control" %>
    <br>

    <%= f.label :DOB, "Birthdate :" %> &nbsp;
    <%= f.date_select :dob, as: :date, :start_year=>1900 ,placeholder: "Enter Author's Birthday Date",class:"mb-2 rounded-3 dob_field" %>
    <br> <br>

    <%= f.label :email, "Email :" %>
    <%= f.text_field :email ,placeholder: "Enter Author's Email",class:"mb-2 form-control" %>
    <br>

    <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>

<% end %>

</div>