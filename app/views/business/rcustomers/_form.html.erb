<div class="center flex-column" id="vantajs" style="height:100vh;">
  <div class="card bg-light border-warning shadow" style="width: 22rem;">
    <div class="card-body">
      <div class="card-header">
        <h2 class="text-center">Customer Form</h2>
      </div>
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with(model: [:business, @rcustomer]) do |rcustomer| %>
        <%= rcustomer.label :name, "First Name :", class:"mt-3" %>
        <%= rcustomer.text_field :name ,placeholder: "Enter Customer's Name",class:"mb-2 form-control" %>
        <br>
        <%= rcustomer.label :email, "Email :" %>
        <%= rcustomer.text_field :email ,placeholder: "Enter Customer's email",class:"mb-2 form-control" %>
        <br>
        <%= rcustomer.label :phone_number, "Phone Number :" %>
        <%= rcustomer.telephone_field :phone_number ,placeholder: "Enter Customer's phone_number",class:"mb-2 form-control" %>
        <br>
        <%= rcustomer.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
      <% end %>
    </div>
  </div>
</div>
