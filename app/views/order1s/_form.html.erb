<div class="center flex-column" id="vantajsnet" style="height:100vh;">
  <div class="card bg-light border-warning shadow" style="width: 22rem;">
    <div class="card-body">
      <div class="card-header">
        <h2 class="text-center">Order Form</h2>
      </div>
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with(model: [@product1, @order1]) do |order| %>
        <h4 class="mt-3"> &#10145; Product Name: <%= @product1.name %> </h4>
        <h4> &#10145; Product Price: <%= @product1.price %> </h4>
        <%= order.hidden_field :product1_id, class:"mb-2 form-control" %>
        <br>
        <%= order.label :quantity, "Quantity :", class:"mt-2" %>
        <%= order.number_field :quantity ,placeholder: "Enter Order's Quantity",class:"mb-2 form-control" %>
        <br>
        <%= order.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
      <% end %>
    </div>
  </div>
</div>
